{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "^/api/.*",
      "dest": "/api"
    },
    {
      "src": "^(?!.*\\.).*$",
      "dest": "/index.html"
    },
    {
      "src": "^/(.*)$",
      "dest": "/$1"
    }
  ]
}

