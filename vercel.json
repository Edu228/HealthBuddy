{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/_core/index.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "^/api/.*",
      "dest": "/dist/index.js"
    },
    {
      "src": "^/trpc/.*",
      "dest": "/dist/index.js"
    },
    {
      "src": "^(?!.*\\.).*$",
      "dest": "/dist/public/index.html"
    },
    {
      "src": "^/(.*)$",
      "dest": "/dist/public/$1"
    }
  ]
}

